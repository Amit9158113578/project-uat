{
    "compilerOptions": {
        "outDir": "./out",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom",
            "esnext.asynciterable"
        ],
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "suppressImplicitAnyIndexErrors": false,
        "typeRoots": [
            "node_modules/@types/"
        ],
        "types": [
            "node",
            "express",
            "mocha"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
